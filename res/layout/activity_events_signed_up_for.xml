<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title for the screen -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/events_signed_up_for_caps"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="#0D47A1"/>

    <!-- Placeholder TextView if no events are found -->
    <TextView
        android:id="@+id/no_events_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_haven_t_signed_up_for_any_events_yet"
        android:visibility="gone"
        android:textAlignment="center"
        android:padding="16dp" />

    <!-- ListView for displaying events -->
    <ListView
        android:id="@+id/list_events_joined"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
